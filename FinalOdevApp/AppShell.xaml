<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FinalOdevApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FinalOdevApp"
    Shell.FlyoutBehavior="Flyout"
    Title="FinalOdevApp">

    <ShellContent
        Title="Giriş Sayfası"
        ContentTemplate="{DataTemplate local:Giris}"
        Route="Giris"
        Icon="home2.png"/>

    <ShellContent
        Title="Döviz Kurları"
        ContentTemplate="{DataTemplate local:Kurlar}"
        Route="Kurlar"
        Icon="currency.png"/>

    <ShellContent
        Title="Haberler"
        ContentTemplate="{DataTemplate local:Haberler}"
        Route="Haberler"
        Icon="news.png"/>

    <ShellContent
        Title="Hava Durumu"
        ContentTemplate="{DataTemplate local:Hava}"
        Route="Hava"
        Icon="weather2.png"/>

    <ShellContent
        Title="ToDo"
        ContentTemplate="{DataTemplate local:Todo}"
        Route="Todo"
        Icon="todo2.png"/>

    <ShellContent
        Title="Ayarlar"
        ContentTemplate="{DataTemplate local:Ayarlar}"
        Route="Ayarlar"
        Icon="settings.png"/>
</Shell>
